<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/screenBgTwo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.Fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comm"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="38sp"
                android:translationX="-15dp"
                android:layout_weight="1"
                style="@style/textColor"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/roleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:fontFamily="@font/urbanist_medium"/>

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Andrew Sam"
                    android:textSize="15sp"
                    android:layout_marginTop="-3dp"
                    android:fontFamily="@font/urbanist_bold"
                    style="@style/textColor"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                app:civ_border_color="@color/myTheme"
                app:civ_border_width="2dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_bg"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            style="@style/searchBg">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"
                app:tint="#A6A6A6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Search Here"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                android:textColor="#BDBDBD"
                android:fontFamily="@font/urbanist_regular"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/filter"
                app:tint="@color/myTheme" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Products"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="20sp"
                style="@style/textColor"/>

            <TextView
                android:id="@+id/productsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="16sp"
                android:textColor="@color/myTheme"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>