<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.AddNewAddressActivity"
    style="@style/screenBgTwo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            android:layout_marginRight="10dp"
            style="@style/iconColor"/>

        <TextView
            android:id="@+id/navTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Address"
            android:fontFamily="@font/urbanist_bold"
            android:textSize="28sp"
            android:layout_weight="1"
            style="@style/textColor"/>

        <ImageView
            android:id="@+id/deleteBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/delete"
            android:visibility="gone"
            app:tint="#F75555" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/mapImage"
            android:scaleType="matrix"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/map_pointer"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/testimg"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/white"/>

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        style="@style/borderRadiusTop"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginRight="-1dp">

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/small_handle"
            style="@style/strokeBgColor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Address Details"
            android:fontFamily="@font/urbanist_bold"
            android:textSize="24sp"
            style="@style/textColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/line_shape"
            android:layout_marginVertical="15dp"
            style="@style/strokeBgColor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Address Name"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/urbanist_bold"
            android:textSize="18sp"
            style="@style/textColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_bg"
            android:paddingHorizontal="15dp"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="10dp"
            style="@style/inputBg">

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:hint="Address Name Here"
                android:textColorHint="#BDBDBD"
                android:layout_marginHorizontal="10dp"
                android:textSize="14sp"
                android:background="@color/transparent"
                android:maxLines="1"
                android:minLines="1"
                android:maxLength="20"
                android:inputType="textPersonName"
                android:fontFamily="@font/urbanist_semibold"
                style="@style/inputTextColor"/>

            <ImageView
                android:id="@+id/clear_text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/close"
                app:tint="#CACACA"
                android:visibility="gone"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Address Details"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/urbanist_bold"
            android:textSize="18sp"
            style="@style/textColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_bg"
            android:paddingHorizontal="15dp"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="10dp"
            style="@style/inputBg">

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:hint="Address Details Here"
                android:textColorHint="#BDBDBD"
                android:layout_marginHorizontal="10dp"
                android:textSize="14sp"
                android:background="@color/transparent"
                android:maxLines="1"
                android:minLines="1"
                android:maxLength="200"
                android:inputType="textPersonName"
                android:fontFamily="@font/urbanist_semibold"
                style="@style/inputTextColor"/>

            <ImageView
                android:id="@+id/clear_text2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/close"
                app:tint="#CACACA"
                android:visibility="gone"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location"
                style="@style/iconColor" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/defaultAddressCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make this as the default address"
            android:fontFamily="@font/urbanist_semibold"
            android:buttonTint="@color/myTheme"
            android:textSize="14sp"
            android:layout_marginVertical="5dp"
            style="@style/textColor"/>

        <Button
            android:id="@+id/addBtn"
            android:text="Add"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            style="@style/EcommButton"/>


    </LinearLayout>


</LinearLayout>