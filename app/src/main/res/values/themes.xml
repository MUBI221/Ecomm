<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecomm" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/myTheme</item>
        <item name="colorPrimaryVariant">@color/myThemeLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ecomm" parent="Base.Theme.Ecomm" />
    <style name="BottomNavigationViewTextStyleActive">
        <item name="android:fontFamily">@font/urbanist_bold</item>
    </style>
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/urbanist_medium</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="DialogAnimationBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out</item>
    </style>
    <style name="EcommButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="EcommButtonSecondary">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:backgroundTint">#E6F8EF</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/myTheme</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Title">
        <item name="android:fontFamily">@font/urbanist_black</item>
        <item name="android:textSize">70dp</item>
    </style>
    <style name="Heading1">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">48dp</item>
    </style>
    <style name="textColor">
        <item name="android:textColor">#212121</item>
    </style>
    <style name="textColorLight">
        <item name="android:textColor">#616161</item>
    </style>
    <style name="iconColor">
        <item name="android:tint">#212121</item>
    </style>
    <style name="productBgColor">
        <item name="android:backgroundTint">#F1F1F1</item>
    </style>
    <style name="screenBg">
        <item name="android:background">#fff</item>
    </style>
    <style name="screenBgTwo">
        <item name="android:background">#FCFCFC</item>
    </style>
    <style name="bgTint">
        <item name="android:backgroundTint">#fff</item>
    </style>
    <style name="searchBg">
        <item name="android:backgroundTint">#EDEDED</item>
    </style>
    <style name="notFoundImage">
        <item name="android:src">@drawable/not_found_frame</item>
    </style>
    <style name="appleImage">
        <item name="android:src">@drawable/apple_img_dark</item>
    </style>
    <style name="imageShape">
        <item name="android:background">@drawable/image_shape</item>
    </style>
    <style name="bgShade">
        <item name="android:background">@drawable/shade_bg_light</item>
    </style>
    <style name="bgQuantity">
        <item name="android:backgroundTint">#F8F8F8</item>
    </style>
    <style name="btnQuantity">
        <item name="android:tint">@color/myTheme</item>
    </style>
    <style name="textQuantity">
        <item name="android:textColor">@color/myTheme</item>
    </style>
    <style name="stockBg">
        <item name="android:backgroundTint">@color/myThemeExtraLight</item>
    </style>
    <style name="productTitle">
        <item name="android:textColor">#DFDFDF</item>
    </style>
    <style name="bottomDialogBg">
        <item name="android:background">@drawable/bottom_dialog_bg</item>
    </style>
    <style name="strokeBgColor">
        <item name="android:backgroundTint">#EEEEEE</item>
    </style>
    <style name="borderRadiusTop">
        <item name="android:background">@drawable/border_radius_top</item>
    </style>
    <style name="productCartBg">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>
    <style name="bottomDialogBgTwo">
        <item name="android:background">@drawable/bottom_dialog_bg_two</item>
    </style>
    <style name="productCartDialogBg">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>
    <style name="tabText">
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#9E9E9E</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.0</item>
    </style>
    <style name="mapImage">
        <item name="android:src">@drawable/map_img</item>
    </style>
    <style name="inputBg">
        <item name="android:backgroundTint">#FAFAFA</item>
    </style>
    <style name="inputTextColor">
        <item name="android:textColor">#212121</item>
    </style>
    <style name="addressBgChoice">
        <item name="android:background">@drawable/list_bg</item>
    </style>
    <style name="addressBgChoiceSelected">
        <item name="android:background">@drawable/checked_list_bg</item>
    </style>

</resources>